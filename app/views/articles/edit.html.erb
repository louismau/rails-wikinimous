  <%= form_for(@article) do |f| %>
    <div class="form_group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form_group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
      <%= f.submit value: 'Edit Article', class: 'btn btn-primary mt-2' %>
    <% end %>
